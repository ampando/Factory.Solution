@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h2>Machines</h2>

@if (@Model.Count == 0)
{
  <p> No Machines have been added yet.</p>
}
else
{
  <ul>
  @foreach (Machine machine in @Model)
  {
    <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
  }
  </ul>
}

<button class="btn btn-dark">@Html.ActionLInk("Add New Machine", "Create")</button>