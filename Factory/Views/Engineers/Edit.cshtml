@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Edit Engineer</h2>

<h4>Edit this engineer: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  @Html.Label("Experience Level");
  @Html.TextBoxFor(model => model.ExperienceLevel, new { @type="number", min="1", max="10", required="required" });
  
  <input type="submit" value="Save" />
  <br>
}
<p>@Html.ActionLink("Back to Engineer List", "Index")</p>