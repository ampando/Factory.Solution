@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a new engineer to work</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.Label("Experience Level")
  @Html.TextBoxFor(model => model.ExperienceLevel, new { @type="number", min="1", max="10"})
  <input type="submit" value="Add New Engineer" />
}
<p>@Html.ActionLink("Show All Engineers", "Index")</p>